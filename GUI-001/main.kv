<MainWindow>:
	name: 'MainWindow'
	id: id_mainWindow

	FloatLayout:		
    	Image:
        	source: 'images/hands4.png'
        	allow_stretch: True
        	keep_ratio: False

	FloatLayout:
		id: id_LWidgets
	FloatLayout:
		id: id_RWidgets

	BoxLayout:
		size_hint: (1, 0.1)
		pos_hint: {'top': 1}
		padding: [10, 10, 10, 10]
		spacing: 5


		Button:
			text: 'Layout Menu'
			on_release: 
				app.root.current = 'LayoutMenu'
				root.manager.transition.direction ='down'

#		BoxLayout:
#			orientation: 'vertical'
#			Label:
#				text: 'prime'

        Spinner:
            id: id_layer_spinner
            text: root.loadLastActiveLayer()
            values: root.readLayerList()
            on_text:
                #app.root.get_screen('ButtonAssignment').ids.id_BA_Screen.currentLayer = id_layer_spinner.text
                root.saveLastSession()
            on_press: root.readLayerList()


